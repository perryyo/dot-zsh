# Process handling.
alias psg="ps aux | grep"
alias ka9="killall -9"
alias k9="kill -9"

# Moving around.
alias ..="cd .."

# Show human friendly numbers and colors.
alias df="df -h"
alias ll="ls -alGh --color=auto"
alias ls="ls -Gh --color=auto"
alias du="du -h -d 2"

# Listing files.
alias lsg="ll | grep"

# Vim stuff.
alias ve="vim ~/.vimrc"
alias v="vim"

# Quick ZSH editing.
alias ze="vim ~/.zshrc"
alias zr="source ~/.zshrc"

# Common shell functions.
alias tf="tail -f"
alias l='less'
alias lh="ls -alt | head"
alias tmux="TERM=xterm-256color tmux"
alias cl="clear"
alias ps="ps aux"

# Quick file zipping.
alias gz="tar -zcvf"

# Python stuff.
alias python="bpython"
